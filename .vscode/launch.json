    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch gravityd",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "/go/bin/gravityd",
            "showLog": true,
            "args": [
                "--home",
                "/validator1",
                "--address",
                "tcp://7.7.7.1:26655",
                "--rpc.laddr",
                "tcp://7.7.7.1:26657",
                "--p2p.laddr",
                "tcp://7.7.7.1:26656",
                "--log_level",
                "info",
                "start"
            ]
        }
    ]
}